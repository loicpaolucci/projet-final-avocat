<div class="container current-list">
<div class="firms-index">
    <% Firm.all.each do |firm| %>
        <% if firm.departement_id == zip_id %>
            <br>
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title"><%= firm.name %></h5>
                    <p class="card-text">Pour nous contacter : par téléphone <%= firm.phone_number %> ou par email :  <%= firm.email %></p>
                    <% if user_signed_in? %>
                        <a href="<%= firm_path(firm.id)%>" class="btn btn-sm btn-danger">Voir le cabinet</a>
                    <% end %>
                </div>
                <div class="card-footer text-muted">
                    <%= firm.rating %> votes
                </div>
            </div>
        <% end %>
    <% end %>
</div>
</div>